{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**",
      "tests/**"
    ]
  },
  "rules": {
    "quotemark": [true, "single", "avoid-template"],
    "indent": [true, "spaces", 2],
    "interface-name": false,
    "no-consecutive-blank-lines": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "space-before-function-paren": [false, "always"], //禁用函数定义时括号前面不要有空格
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "never",
          "arrays": "never",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],     // 禁用数组，对象，方法结尾的逗号
    "no-console": [true, "warn", "error", "info"],   // 修改禁用console的规则,
    "only-arrow-functions": false   // 禁止只允许箭头函数
  }
}
